<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal de la app -->
    <style name="Theme.ZafaconApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personalizaciones adicionales -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#274d72</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <!-- Tema para la Splash Screen -->
    <style name="Theme.ZafaconApp.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
</resources>
